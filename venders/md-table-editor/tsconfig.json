{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": false,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
  },
  "exclude": [
    "node_modules","../../node_modules"
  ],
  "include": ["./src/**/*.ts"]
}
